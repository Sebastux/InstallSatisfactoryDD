{% if branche_stable %}
# Installation du serveur Satisfactory - Branche stable
steamcmd +force_install_dir /home/{{ compte_satisfactory }}/steam +login anonymous +app_update 1690800 validate +quit
{% else %}
# Installation du serveur Satisfactory - Branche experimental
steamcmd +force_install_dir ~/SatisfactoryDedicatedServer +login anonymous +app_update 1690800 -beta experimental validate +quit
{% endif %}